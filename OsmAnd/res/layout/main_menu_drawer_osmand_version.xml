<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="start|center_vertical"
	android:minHeight="@dimen/list_item_height"
	android:orientation="vertical"
	android:paddingHorizontal="@dimen/content_padding"
	android:paddingVertical="@dimen/content_padding_small">

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/osmand_version"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:letterSpacing="@dimen/text_button_letter_spacing"
		android:lineHeight="@dimen/default_title_line_height"
		android:maxLines="1"
		android:textColor="?android:textColorPrimary"
		android:textSize="@dimen/default_list_text_size"
		app:typeface="@string/font_roboto_regular"
		tools:text="OsmAnd 4.1.0#33591m" />

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/release_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:letterSpacing="@dimen/description_letter_spacing"
		android:lineHeight="@dimen/default_desc_line_height"
		android:maxLines="1"
		android:textColor="?android:textColorSecondary"
		android:textSize="@dimen/default_desc_text_size"
		android:visibility="gone"
		app:typeface="@string/font_roboto_regular"
		tools:text="Released: 2020-02-15"
		tools:visibility="visible" />

</LinearLayout>